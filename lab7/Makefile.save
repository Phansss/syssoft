libtcpsock.so: lib/tcpsock.o
	cc -shared -o libtcpsock.so lib/tcpsock.o
	sudo cp libtcpsock.so /usr/lib
	sudo $(LDCONFIG)
	rm lib/tcpsock.o


shared_tcpsock.o:
	gcc lib/tcpsock.c -o lib/tcpsock.o -fPIC -c


