.SUFFIXES: .c .o
LDCONFIG = ldconfig
FLAGS = -std=c11 -Werror -lm $(shell pkg-config --cflags --libs check)



sensor_node:
	mkdir -p build
	gcc -Wall sensor_node.c -o ./build/sensor_node -ltcpsock -ldplist  $(FLAGS)
	./build/sensor_node

s1:
	

